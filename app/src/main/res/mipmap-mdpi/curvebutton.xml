<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#26BFDA" />
         <gradient android:angle="-90" android:startColor="#26BFDA" android:endColor="#26BFDA"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#5e7974" />
          <solid android:color="#26BFDA" />       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#26BFDA" />
         <gradient android:angle="-90" android:startColor="#26BFDA" android:endColor="#58857e" />            
     </shape>
 </item>
</selector>